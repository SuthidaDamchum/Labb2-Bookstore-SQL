<Window x:Class="BookStore_Presentation.Dialogs.AddNewAuthorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore_Presentation.Dialogs"
        xmlns:viewmodels="clr-namespace:BookStore_Presentation.ViewModels"
        mc:Ignorable="d"
        Title="New Author" Height="260" Width="220"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize"  >

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- First Name -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="First Name" FontWeight="SemiBold"/>
            <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" 
                     Padding="3" BorderBrush="#CCC" BorderThickness="1" />
        </StackPanel>

        <!-- Last Name -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Last Name" FontWeight="SemiBold"/>
            <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" 
                     Padding="3" BorderBrush="#CCC" BorderThickness="1"/>
        </StackPanel>

        <!-- Birth Date -->
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock>
                <Run Text="Birth Date"  FontWeight="SemiBold" />
                <Run Text=" (yyyy-MM-dd)" Foreground="Gray" FontStyle="Italic" FontSize="12"/>
            </TextBlock>
            <TextBox Text="{Binding BirthDayText, Mode=TwoWay, StringFormat=yyyy-MM-dd}" 
                     Padding="3" BorderBrush="#CCC" BorderThickness="1"
                     ToolTip="Enter date as YYYY-MM-DD"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
            <Button Content="Save" Width="80" Margin="0,0,10,0" Padding="5,3" 
            Background="#DDD" Foreground="Black" FontWeight="SemiBold" Click="Save_Click" />
            <Button Content="Cancel" Width="80" Padding="5,3"
            Background="#DDD" Foreground="Black" FontWeight="SemiBold" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>