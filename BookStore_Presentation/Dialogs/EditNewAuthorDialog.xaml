<Window x:Class="BookStore_Presentation.Dialogs.EditNewAuthorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore_Presentation.Dialogs"
        xmlns:viewmodels="clr-namespace:BookStore_Presentation.ViewModels"
        mc:Ignorable="d"
               Title="Edit New Author"  Height="250" Width="220"
        WindowStartupLocation="CenterScreen"  ResizeMode="CanResize"
        d:DataContext="{d:DesignInstance Type=viewmodels:AuthorsAdminViewModel, IsDesignTimeCreatable=False}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- First Name -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="First Name" FontWeight="SemiBold"/>
            <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" 
                     Padding="3" BorderBrush="#CCC" BorderThickness="1" />
        </StackPanel>

        <!-- Last Name -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Last Name" FontWeight="SemiBold"/>
            <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" 
                     Padding="3" BorderBrush="#CCC" BorderThickness="1"/>
        </StackPanel>

        <!-- Birth Date -->
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock>
                <Run Text="Birth Date"  FontWeight="SemiBold" />
                <Run Text=" (yyyy-MM-dd)" Foreground="Gray" FontStyle="Italic" FontSize="12"/>
            </TextBlock>
            <TextBox Text="{Binding BirthDayText, Mode=TwoWay, StringFormat=yyyy-MM-dd}" 
                     Padding="3" BorderBrush="#CCC" BorderThickness="1"
                     ToolTip="Enter date as YYYY-MM-DD"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="OK" Width="60" Margin="0,0,10,0" Click="OKButton_Click"/>
            <Button Content="Cancel" Width="60" Click="CancelButton_Click_1"/>
        </StackPanel>


    </Grid>
</Window>